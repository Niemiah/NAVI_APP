<?xml version="1.0" encoding="UTF-8"  ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.solvd.naviapp.db.implMyBatis.mappers.IGraphMapper">
    <select id= "selectByClientId" resultMap= "com.solvd.naviapp.db.implMyBatis.mappers.IGraphMapper.graphResultMap">
        SELECT id
        FROM Graphs
        WHERE Clients_id = #{id}
    </select>
    <insert id= "create">
        INSERT INTO Graphs (clients_id)
        VALUES (#{clientsId})
    </insert>
    <select id= "selectLastId" resultType="java.lang.Integer">
        SELECT MAX(id)
        FROM Graphs;
    </select>
    <resultMap id="graphResultMap" type="com.solvd.naviapp.bin.Graph" autoMapping="false">
        <id property="id" column="id"/>
    </resultMap>
</mapper>


